{
  "compilerOptions": {
    "moduleResolution": "bundler",  // ✅ or "nodenext" or "node16"
    "module": "ESNext",             // ✅ Required for ESM packages
    "target": "ESNext",             // ✅ Modern JS target
    "jsx": "react-jsx",             // Optional if you use JSX/TSX
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}